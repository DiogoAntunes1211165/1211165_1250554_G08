pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Use the built-in SCM checkout in multibranch pipelines
                checkout scm
            }
        }

        stage('Clean') {
            when {
                expression { env.BRANCH_NAME == 'dev' }
            }
            steps {
                echo 'Cleaning the workspace...'
                sh 'mvn clean'
            }
        }

        stage('Build') {
            when {
                expression { env.BRANCH_NAME == 'dev' }
            }
            steps {
                echo 'Building Maven project (tests skipped)...'
                sh 'mvn install -DskipTests'
            }
        }
    }

    post {
        always {
            echo 'Build finished'
        }
    }
}
